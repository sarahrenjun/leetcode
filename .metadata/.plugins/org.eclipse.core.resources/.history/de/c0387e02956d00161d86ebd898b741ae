package com.iqiyi.pay.channel.ccb.controller;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.WebDataBinder;
import org.springframework.web.bind.annotation.InitBinder;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.iqiyi.pay.channel.ccb.handle.CcbPayHandle;
import com.iqiyi.pay.channel.ccb.handle.HandleMessage;
import com.iqiyi.pay.channel.ccb.param.request.CcbPayRequest;
import com.iqiyi.pay.channel.ccb.validator.CcbPayRequestValidator;
import com.iqiyi.pay.channel.controller.PayController;
import com.iqiyi.pay.channel.request.PayRequest;
import com.iqiyi.pay.channel.response.BaseResponse;

/**
 * ccb pay controller
 * @author renshuangjun_sx on 2016/08/04
 *
 */
@RestController
public class CcbPayController extends PayController {

	
	private static final Logger logger = LoggerFactory
			.getLogger(CcbPayController.class);
	
	@Autowired
	private CcbPayHandle ccbPayHandle;
	@Autowired
	private HandleMessage handleMessage;
	
	@Autowired
	private CcbPayRequestValidator validator;
	
	@InitBinder
	public void initBinder(WebDataBinder binder) {
		binder.setValidator(validator);
	}
	
	@Override
	protected BaseResponse handle(PayRequest request) {
		logger.info("[module: CcbPayController][step:convert input to ccb bind request param][input:{}]",request);
		CcbPayRequest ccbBindRequest = ccbPayHandle.convertToCcbRequest(request);
		String url = environment.getProperty("ccb.pay.host")+environment.getProperty("ccb.pay.path");
		logger.info("bind request url:{}",url);
		String encryptMessage = handleMessage.generateEncryptMessage(ccbBindRequest, "model/pay.vm");
		logger.info("[module: CcbPayController][step:send message][message:{}]",encryptMessage);
		String responseMessage = handleMessage.sendMessage(encryptMessage,url);
		logger.info("[module: CcbPayController][step:convert response message to xml][response message:{}]",responseMessage);
		String xml = handleMessage.getXml(responseMessage);
		logger.info("[module: CcbPayController][step:convert response message to object][response message:{}]",xml);
		return ccbPayHandle.convertXmltoObject(xml);
	}
}
