package com.iqiyi.pay.channel.ccb.controller;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.WebDataBinder;
import org.springframework.web.bind.annotation.InitBinder;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.iqiyi.pay.channel.ccb.handle.CcbQueryOrderHandle;
import com.iqiyi.pay.channel.ccb.handle.HandleMessage;
import com.iqiyi.pay.channel.ccb.param.request.CcbQueryOrderRequest;
import com.iqiyi.pay.channel.ccb.validator.CcbQueryOrderRequestValidator;
import com.iqiyi.pay.channel.controller.QueryOrderController;
import com.iqiyi.pay.channel.request.QueryOrderRequest;
import com.iqiyi.pay.channel.response.BaseResponse;
/**
 * 
 * @author renshuangjun_sx on 2016/08/04
 *
 */

@RestController
public class CcbQueryOrderController extends QueryOrderController {

	private static final Logger logger = LoggerFactory
			.getLogger(CcbQueryOrderController.class);
	
	@Autowired
	private CcbQueryOrderHandle ccbQueryOrder;
	@Autowired
	private HandleMessage handleMessage;
	
	@Autowired
	private CcbQueryOrderRequestValidator validator;
	
	@InitBinder
	public void initBinder(WebDataBinder binder) {
		binder.setValidator(validator);
	}
	
	@Override
	protected BaseResponse handle(QueryOrderRequest request) {
		logger.info("[module: CcbQueryOrderController][step:convert input to ccb bind request param][input:{}]",request);
		CcbQueryOrderRequest ccbBindRequest = ccbQueryOrder.convertToCcbRequest(request);
		String url = environment.getProperty("ccb.pay.host")+environment.getProperty("ccb.pay.path");
		logger.info("bind request url:{}",url);
		String encryptMessage = handleMessage.generateEncryptMessage(ccbBindRequest, "model/query.vm");
		logger.info("[module: CcbQueryOrderController][step:send message][message:{}]",encryptMessage);
		String responseMessage = handleMessage.sendMessage(encryptMessage,url);
		logger.info("[module: CcbQueryOrderController][step:convert response message to xml][response message:{}]",responseMessage);
		String xml = handleMessage.getXml(responseMessage);
		logger.info("[module: CcbQueryOrderController][step:convert response message to object][response message:{}]",xml);
		return ccbQueryOrder.convertXmltoObject(xml);
	}


}
