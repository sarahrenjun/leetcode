package com.iqiyi.pay.channel.ccb.handle;

import java.io.IOException;
import java.util.Date;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.core.env.Environment;
import org.springframework.stereotype.Component;
import org.xml.sax.SAXException;

import com.iqiyi.pay.channel.ccb.constants.CcbResultCode;
import com.iqiyi.pay.channel.ccb.constants.ConstantParam;
import com.iqiyi.pay.channel.ccb.param.request.CcbBindRequest;
import com.iqiyi.pay.channel.ccb.param.response.CcbBindResponse;
import com.iqiyi.pay.channel.ccb.util.CcbUtil;
import com.iqiyi.pay.channel.constants.ResultCode;
import com.iqiyi.pay.channel.exception.PayException;
import com.iqiyi.pay.channel.request.BindRequest;
import com.iqiyi.pay.channel.response.BindResponse;
import com.iqiyi.pay.channel.util.XmlObjectUtil;
/**
 * 
 * @author renshuangjun_sx on 2016/08/04
 *
 */

@Component
public class CcbBindHandle {
	
	private static final Logger logger = LoggerFactory
			.getLogger(CcbBindHandle.class);
	
	@Autowired
	private Environment environment;
	@Autowired
	private HandleMessage generateEncryptMessage;
	
	/**
	 * convert input param to ccb bind request param
	 * @param param
	 * @return
	 */
	public CcbBindRequest convertToCcbRequest(BindRequest param) {
		CcbBindRequest ccbBindRequest = new CcbBindRequest();
		ccbBindRequest.setAcct_no(param.getCard_num());
		ccbBindRequest.setCert_id(param.getCert_num());
		ccbBindRequest.setCunt_no(environment.getProperty("ccb.counter.number"));
		ccbBindRequest.setCust_nm(param.getUser_name());
		ccbBindRequest.setMobile(param.getCard_mobile());
		ccbBindRequest.setShop_no(environment.getProperty("ccb.shop.number"));
		ccbBindRequest.setSms_code(param.getSms_code());
		ccbBindRequest.setTx_flag("0");
		ccbBindRequest.setTxcode(ConstantParam.CCB_BIND_TXCODE);
		ccbBindRequest.setTxdate(param.getTrans_time().substring(0, 8));
		ccbBindRequest.setTxtime(param.getTrans_time().substring(8));
		ccbBindRequest.setTxseq(CcbUtil.getSysTime());
		return ccbBindRequest;
	}
	
	
	
	/**
	 * convert response xml to object
	 * @param xml
	 * @return
	 */
	public BindResponse convertXmltoObject(String xml) {
		BindResponse response = new BindResponse();
		try {
			CcbBindResponse cbr = XmlObjectUtil.convertXmlToObjectDigester(xml, "UTF-8", "rules/BindResponseDigester.xml");
			logger.info("[ccb bind response object: {}]",cbr);
			if("SUCCESS".equals(cbr.getStatus())) {
				response.setCode(ResultCode.SUCCESS.getCode());
				response.setMsg(ResultCode.SUCCESS.getMsg());
			} else {
				response.setCode(cbr.getCode());
				response.setMsg(cbr.getDesc());
			}
			response.setTrans_seq(cbr.getTxseq());
			response.setChannel_resp_code(cbr.getCode());
			response.setChannel_resp_msg(cbr.getDesc());
		} catch (IOException | SAXException e) {
			logger.info("[convert response xml to object error:[message:{},cause:{}]]",e.getMessage(),e.getCause());
			throw new PayException(CcbResultCode.ERROR_OF_CONVERT.getCode(),CcbResultCode.ERROR_OF_CONVERT.getMsg());
		}
		return response; 
	}
	
	
}
